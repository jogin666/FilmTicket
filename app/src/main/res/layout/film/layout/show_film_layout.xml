<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@id/filmImg"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:focusable="false"
            android:src="@mipmap/head_img"/>
        <LinearLayout
            android:focusable="false"
            android:layout_toRightOf="@+id/filmImg"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/filmName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/fontColor_2"
                android:text="电影名"/>
            <TextView
                android:id="@+id/filmType"
                android:layout_below="@id/filmName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/fontColor_2"
                android:text="类型"/>
            <TextView
                android:id="@+id/filmTime"
                android:layout_below="@id/filmType"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/fontColor_2"
                android:text="时间"/>
        </LinearLayout>
        <Button
            android:focusable="false"
            android:id="@+id/back"
            android:layout_below="@id/filmImg"
            android:textSize="14sp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/fontColor_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="返回"/>
        <Button
            android:focusable="false"
            android:id="@+id/buyTicket"
            android:layout_below="@id/filmImg"
            android:textSize="14sp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/fontColor_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="买票"/>
    </RelativeLayout>
</LinearLayout>

